<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/post_cardView"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        app:cardCornerRadius="5dp"
        android:elevation="8dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recyclerImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bycycle" />

            <TextView
                android:id="@+id/recyclerTxt_heading"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="11dp"
                android:layout_below="@id/recyclerImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountain Bike"
                android:fontFamily="@font/acme_regular"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/recyclerTxt_paymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerTxt_heading"
                android:layout_gravity="center"
                android:fontFamily="@font/acme_regular"
                android:layout_marginLeft="11dp"
                android:text="Paid"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recyclerTxt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recyclerTxt_heading"
                android:layout_gravity="center"
                android:fontFamily="@font/acme_regular"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/recyclerTxt_paymentType"
                android:text="200"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/recyclerImg"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="11dp"
                android:background="@drawable/image_circle" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
