<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD9D9"
    tools:context=".login_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/gradient"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardView"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="80dp"
            android:text="Login"
            android:letterSpacing=".05"
            android:shadowColor="#000000"
            android:shadowDy="5"
            android:shadowDx="5"
            android:shadowRadius="10"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/acme_regular"
            android:textSize="25sp"
            android:onClick="change_fragment"/>
        <TextView
            android:id="@+id/signup_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:text="Signup"
            android:letterSpacing=".05"
            android:shadowColor="#000000"
            android:shadowDy="3"
            android:shadowDx="3"
            android:shadowRadius="2"
            android:textColor="#E7E7E7"
            android:fontFamily="@font/acme_regular"
            android:textSize="25sp"
            android:onClick="change_fragment"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <fragment
            android:id="@+id/fragment_place"
            android:name="com.example.project1.login_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </fragment>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/login_with_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:text="@string/or_login_with"
        android:textSize="16sp"
        android:textColor="#000000"
        android:letterSpacing=".05"
        android:shadowColor="#80000000"
        android:shadowDx="1"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:fontFamily="@font/acme_regular"
        android:layout_marginTop="25dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_below="@id/login_with_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="30dp"
            android:src="@drawable/fb_circle"
            tools:ignore="ContentDescription,RtlSymmetry" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:src="@drawable/google_circle"
            tools:ignore="ContentDescription,RtlSymmetry" />

    </LinearLayout>





</RelativeLayout>